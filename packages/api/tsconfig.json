{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../../node_modules/@types", "./src/types"],  
    "types": ["node", "custom-types"]  
  },
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
