{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "custom-types",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts",
    "__tests__/**/*.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
